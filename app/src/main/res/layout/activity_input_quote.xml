<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TextView for entering a custom quote -->
    <EditText
        android:id="@+id/inputQuoteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your quote here"
        android:minHeight="48dp"
        android:padding="16dp"
        android:textSize="18sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitQuoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Quote"
        android:layout_below="@id/inputQuoteEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:padding="12dp" />
</RelativeLayout>
